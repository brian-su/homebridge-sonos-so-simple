{
    "pluginAlias": "SonosSoSimplePlatform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "muteSwitch": {
                "title": "Separate Switch For Mute?",
                "type": "boolean",
                "default": true
            },
            "soundbarsOnly": {
                "title": "Only offer controls for soundbars (Beam, Arc, Playbar, Ray)",
                "type": "boolean",
                "default": false
            },
            "roomNameAsName": {
                "title": "Use the room name as the device name. The default is to use device name",
                "type": "boolean",
                "default": false
            },
            "volume": {
                "title": "Volume Options",
                "type": "string",
                "default": "none",
                "oneOf": [
                    { "title": "None", "enum": ["none"] },
                    { "title": "Lightbulb", "enum": ["bulb"] },
                    { "title": "Fan", "enum": ["fan"] }
                ],
                "required": true
            },
            "volumeControlEndpoints": {
                "title": "Offer endpoints to change volume up and down",
                "type": "boolean",
                "default": false
            }
        }
    }
}
