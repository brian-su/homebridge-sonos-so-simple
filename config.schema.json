{
    "pluginAlias": "SonosSoSimplePlatform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "muteSwitch": {
                "title": "Separate Switch For Mute?",
                "type": "boolean"
            },
            "soundbarsOnly": {
                "title": "Only offer controls for soundbars (Beam, Arc, Playbar)",
                "type": "boolean",
                "default": true
            },
            "roomNameAsName": {
                "title": "Use the room name as device name? Leaving this unchecked will use the device name instead (Beam, Arc, Play1 etc) \n You may need to uninstall and reinstall the plugin to be able to get the Home app to pick up the name changes",
                "type": "boolean",
                "default": false
            },
            "volume": {
                "title": "Volume Options",
                "type": "string",
                "default": "none",
                "oneOf": [
                    { "title": "None", "enum": ["none"] },
                    { "title": "Lightbulb", "enum": ["bulb"] },
                    { "title": "Fan", "enum": ["fan"] }
                ],
                "required": true
            }
        }
    }
}
